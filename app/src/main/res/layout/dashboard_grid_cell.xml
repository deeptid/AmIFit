<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/backgound_grid_patch">
    <!--android:background="@drawable/backgound_grid_patch-->

    <!-- White Strip -->
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/view_for_color"
        android:alpha="1"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/bg"
        android:minHeight="120dp"
        tools:targetApi="ice_cream_sandwich"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/gradient_black_transparent"/>

    <!--ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="128dp"
        android:maxHeight="128dp"
        android:id="@+id/imageView"
        android:layout_centerInParent="true" / -->


    <!-- White Strip -->


    <ImageView
        android:id="@+id/grid_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="0sp"
        android:layout_marginRight="0sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <!--<View-->
    <!--android:layout_width="50dp"-->
    <!--android:layout_height="22dp"-->
    <!--android:id="@+id/beta_view"-->
    <!--android:background="#ddFFFFFF"-->
    <!--/>-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/workout_desc"
        android:textColor="#ddf9f9f9"
        android:textSize="14dp"
        android:maxLines="4"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:layout_alignBottom="@+id/bg"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Workout Title"
        android:id="@+id/title"
        android:textColor="@color/colorWhite"
        android:maxLines="2"
        android:textSize = "20dp"
        android:gravity="left"
        android:paddingLeft="5dp"
        android:paddingRight="10dp"
        android:layout_marginBottom="2dp"
        android:layout_above="@+id/workout_desc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
